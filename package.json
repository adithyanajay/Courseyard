{
  "name": "courseyard",
  "version": "0.0.1",
  "description": "A neat collection of free courses",
  "main": "server.js",
  "scripts": {
    "build": "cd client && npm run build",
    "start": "node server.js",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "lint": "eslint",
    "lint:client": "cd client && eslint ./src/**/*.js ./src/**/*.jsx --no-error-on-unmatched-pattern",
    "lint:all": "npm run lint && npm run lint:client",
    "format": "prettier --write \"**/*.+(js|jsx|json|css|md)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milan090/TimThon.git"
  },
  "author": "coffee",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/milan090/TimThon/issues"
  },
  "homepage": "https://github.com/milan090/TimThon#readme",
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "css": "^3.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.21.6",
    "pg": "^8.4.1",
    "popper.js": "^1.16.1",
    "tailwind": "^4.0.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:all && npm run format"
    }
  }
}
